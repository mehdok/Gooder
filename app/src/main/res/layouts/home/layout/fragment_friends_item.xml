<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mehdok.gooder.ui.home.fragments.FriendsItemFragment"
    >

    <com.mehdok.gooder.infinitescroll.views.InfiniteRecyclerView
        android:id="@+id/friends_item_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/friends_item_progress"
        style="@style/SpinKitView.CubeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/progress_bar_color"
        android:visibility="gone"
        />

</FrameLayout>
