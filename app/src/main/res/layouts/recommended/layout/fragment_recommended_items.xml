<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recommended.fragments.RecommendedItemsFragment"
    >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/recommended_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.mehdok.gooder.infinitescroll.views.InfiniteRecyclerView
            android:id="@+id/recommended_item_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
