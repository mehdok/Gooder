<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.mehdok.singlepostviewlib.views.PostDetailView
        android:id="@+id/post_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </com.mehdok.singlepostviewlib.views.PostDetailView>


    <com.mehdok.singlepostviewlib.views.PostTextView
        android:id="@+id/comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="body"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="right"
        android:layout_margin="@dimen/standard_margin"
        />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selection_color"
        android:layout_marginTop="@dimen/mini_padding"
        android:layout_marginBottom="@dimen/mini_padding"
        />

</LinearLayout>